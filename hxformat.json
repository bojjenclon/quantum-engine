{
	"lineEnds": {
		"leftCurly": "both",
		"rightCurly": "both",
		"objectLiteralCurly": {
			"leftCurly": "after"
		}
	},
	"sameLine": {
		"ifElse": "next",
		"doWhile": "next",
		"tryBody": "next",
		"tryCatch": "next"
	},
	"whitespace": {
		"typeCheckColonPolicy": "around",
		"typeHintColonPolicy": "around"
	},
	"wrapping": {
		"methodChain": {
			"defaultWrap": "onePerLine"
		}
	},
	"emptyLines": {
		"afterFieldsWithDocComments": "ignore",
		"beforeDocCommentEmptyLines": "ignore"
	}
}